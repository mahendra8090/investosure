<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20sp">
   <EditText
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="20sp"
       android:hint="first name"
       android:textColor="#FFFFFF"
       android:textColorHint="#ffffff"
       android:id="@+id/first_name_signup"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:hint="last name"
        android:textColor="#FFFFFF"
        android:textColorHint="#ffffff"
        android:id="@+id/last_name_signup"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:hint="username"
        android:textColor="#FFFFFF"
        android:textColorHint="#ffffff"
        android:id="@+id/user_name_signup"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:hint="email"
        android:textColor="#FFFFFF"
        android:textColorHint="#ffffff"
        android:id="@+id/email_signup"/>/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:hint="mobile no"
        android:textColor="#FFFFFF"
        android:textColorHint="#ffffff"
        android:id="@+id/mobile_signup"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:hint="password"
        android:inputType="textPassword"
        android:ems="10"
        android:textColor="#FFFFFF"
        android:textColorHint="#ffffff"
        android:id="@+id/password1_signup"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:hint="confirm password"
        android:inputType="textPassword"
        android:ems="10"
        android:textColor="#FFFFFF"
        android:textColorHint="#ffffff"
        android:id="@+id/password2_signup"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:hint="state(eg. uttar pradesh )"
        android:textColor="#FFFFFF"
        android:textColorHint="#ffffff"
        android:id="@+id/state_signup"/>
 <android.support.v7.widget.CardView
     android:layout_width="90dp"
     android:layout_height="40dp"
     android:id="@+id/button_login"

     android:layout_marginTop="30sp"
     android:layout_gravity="center"
     app:cardBackgroundColor="@color/colororange"
     app:cardCornerRadius="5dp">
  <LinearLayout
      android:layout_width="match_parent"
      android:orientation="vertical"
      android:layout_height="match_parent">
   <TextView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:text="signup"
       android:textSize="20dp"
       android:layout_marginTop="8dp"
       android:textAlignment="center"


       android:textColor="#ffffff"
       android:textStyle="bold"
       /></LinearLayout>

 </android.support.v7.widget.CardView>

</LinearLayout>